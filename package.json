{
  "name": "sticky-markdown",
  "version": "1.2.4",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder build --win",
    "build:mac": "electron-builder build --mac",
    "package:win": "electron-builder build --win --publish never",
    "package:mac": "electron-builder build --mac --publish never",
    "dist": "electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Sticky Markdown Note App",
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-auto-launch": "^5.0.7",
    "katex": "^0.16.9",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.15.21",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.sticky.markdown.note",
    "productName": "Sticky Markdown Note",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns",
      "type": "distribution"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "asar": true
  }
}
